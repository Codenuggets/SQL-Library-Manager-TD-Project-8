extends layout.pug

block head
  title New Book

block content
  h1 New Book
  //- Checks for success object and sets a h2 element to it if it exists. Can either be for successfully creating or deleting book
  if success
    h2(style="color:#019875")=success
  //- Checks for error object and displays if it exists. For validation purposes  
  if errors
    h2.error Oooops!
    ul.error
      each error in errors
        li=error
  form(method="post" action="/books/new")
    p
      label(for="title") Title
      input#title(name="title" type="text")
    p
      label(for="author") Author
      input#author(name="author" type="text")
    p
      label(for="genre") Genre
      input#genre(name="genre" type="text")
    p
      label(for="year") Year
      input#year(name="year" type="text")
    p
      input(type="submit" value="Create New Book")
    p
      a.button(href='/') Cancel
